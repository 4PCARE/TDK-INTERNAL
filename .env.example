# AI-KMS Environment Configuration (Example)
# Copy to .env and fill in actual values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ai_kms_dev

# AI Providers (Environment-based selection)
AI_PROVIDER=openai
EMBEDDINGS_PROVIDER=openai

# Service Ports (Development)
API_GATEWAY_PORT=3000
AUTH_SVC_PORT=3001
DOC_INGEST_SVC_PORT=3002
EMBEDDING_SVC_PORT=3003
SEARCH_SVC_PORT=3004
AGENT_SVC_PORT=3005
CSAT_SVC_PORT=3006
REALTIME_SVC_PORT=3007
LINE_BRIDGE_SVC_PORT=3008
NLP_SVC_PORT=8000

# API Keys (provide actual values in .env)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=
COHERE_API_KEY=

# LINE Integration
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=

# Security
JWT_SECRET=
SESSION_SECRET=

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# Redis (for messaging)
REDIS_URL=redis://localhost:6379

# Development
NODE_ENV=development
LOG_LEVEL=debug